  const decryptFileForDisplay = (file) => {
    if (!file.encrypted || !sharedSecret) return file.data;
    
    try {
      const decrypted = encryption.decryptFile(
        { ciphertext: file.data, nonce: file.nonce },
        sharedSecret
      );
      return 'data:' + file.type + ';base64,' + decrypted;
