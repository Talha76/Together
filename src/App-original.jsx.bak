      setUserName(savedUserName);
      setMyKeys(JSON.parse(savedMyKeys));
      setTheirPublicKey(savedTheirPublicKey);
      setSharedSecret(savedSharedSecret);
      setKeyExchangeMethod(savedMethod);
      setIsConnected(true);
      setStep('chat');
      setEncryptionStatus('üîí E2E Encrypted');
